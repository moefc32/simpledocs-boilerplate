{
    "name": "simpledocs-boilerplate",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "deploy": "test -f .env && (pnpm build && pnpx gh-pages -d build --dotfiles) || echo 'Error, .env file is missing, deploy aborted!'"
    },
    "devDependencies": {
        "@sveltejs/adapter-static": "^3.0.8",
        "@sveltejs/kit": "^2.17.3",
        "@sveltejs/vite-plugin-svelte": "^5.0.3",
        "@tailwindcss/vite": "^4.0.9",
        "dotenv": "^16.4.7",
        "gh-pages": "^6.3.0",
        "svelte": "^5.20.5",
        "tailwindcss": "^4.0.9",
        "tailwindcss-animate": "^1.0.7",
        "vite": "^6.2.0"
    },
    "dependencies": {
        "@fontsource-variable/archivo": "^5.2.5",
        "@fontsource-variable/bricolage-grotesque": "^5.2.0",
        "@fontsource-variable/reddit-mono": "^5.2.0",
        "lucide-svelte": "^0.477.0",
        "monaco-editor": "^0.52.2"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild"
        ]
    }
}
